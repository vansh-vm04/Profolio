<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Resume</title>
  <style>
    body {
      font-family: 'Helvetica', sans-serif;
      margin: 0;
      padding: 20px;
      color: #333;
      background: #f9f9f9;
    }
    .container {
      max-width: 800px;
      margin: 0 auto;
      background: #fff;
      padding: 20px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .header {
      text-align: center;
      margin-bottom: 20px;
    }
    .header h1 {
      margin: 0;
      font-size: 2.5em;
      color: #2a2a72;
    }
    .contact-info {
      font-size: 1em;
      margin-top: 10px;
      color: #555;
    }
    .contact-info a {
      text-decoration: none;
      color: #2a2a72;
      margin: 0 10px;
    }
    .line {
      border-bottom: 2px solid #2a2a72;
      margin: 20px 0;
    }
    .section {
      margin-top: 20px;
    }
    .section-title {
      font-size: 1.6em;
      font-weight: bold;
      color: #2a2a72;
      margin-bottom: 10px;
    }
    ul {
      list-style-type: disc;
      padding-left: 40px;
    }
    ul li {
      margin-bottom: 8px;
    }
    .item {
      margin-bottom: 15px;
    }
    .item-title {
      font-weight: bold;
      font-size: 1.2em;
    }
    .item-subtitle {
      font-size: 1em;
      color: #555;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1><%= heading.firstname %> <%= heading.surname %></h1>
      <p class="contact-info">
        <a href="mailto:<%= heading.email %>"><%= heading.email %></a> |
        <a href="tel:<%= heading.phone %>"><%= heading.phone %></a> |
        <a href="<%= heading.linkedin %>" target="_blank">LinkedIn</a>
      </p>
    </div>

    <div class="line"></div>

    <div class="section">
      <div class="section-title">Skills</div>
      <ul>
        <% (skills || []).forEach(skill => { %>
          <li><%= skill %></li>
        <% }); %>
      </ul>
    </div>

    <div class="line"></div>

    <div class="section">
      <div class="section-title">Education</div>
      <% (education || []).forEach(edu => { %>
        <div class="item">
          <div class="item-title"><%= edu.cname %>, <%= edu.clocation %></div>
          <div class="item-subtitle"><%= edu.degree %> in <%= edu.branch %> - <%= edu.month %> <%= edu.year %></div>
        </div>
      <% }); %>
    </div>

    <div class="line"></div>

    <div class="section">
      <div class="section-title">Experience</div>
      <% (experience || []).forEach(exp => { %>
        <div class="item">
          <div class="item-title"><%= exp.jobTitle %> at <%= exp.cname %>, <%= exp.clocation %></div>
          <div class="item-subtitle">
            <%= exp.smonth %> <%= exp.syear %> - <%= exp.Working ? 'Present' : exp.emonth + ' ' + exp.eyear %>
          </div>
        </div>
      <% }); %>
    </div>

    <div class="line"></div>

    <div class="section">
      <div class="section-title">Projects</div>
      <% (projects || []).forEach(project => { %>
        <div class="item">
          <div class="item-title"><%= project.Title %></div>
          <p><%= project.Details %></p>
          <% if (project.Link) { %>
            <p><a href="<%= project.Link %>" target="_blank">View Project</a></p>
          <% } %>
        </div>
      <% }); %>
    </div>

    <div class="line"></div>

    <% Object.entries(additionalSections || {}).forEach(([sectionTitle, items]) => { %>
      <div class="section">
        <div class="section-title"><%= sectionTitle %></div>
        <ul>
          <% (Array.isArray(items) ? items : [items]).forEach(item => { %>
            <li><%= item %></li>
          <% }); %>
        </ul>
      </div>
      <div class="line"></div>
    <% }); %>
  </div>
</body>
</html>
